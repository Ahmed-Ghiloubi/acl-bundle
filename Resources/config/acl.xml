<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="projecta_acl.manager.class.class">ProjectA\Bundle\AclBundle\Security\Acl\Manager\ClassManager</parameter>
        <parameter key="projecta_acl.manager.object.class">ProjectA\Bundle\AclBundle\Security\Acl\Manager\ObjectManager</parameter>
    </parameters>

    <services>
        <service id="projecta_acl.classmanager" class="%projecta_acl.manager.class.class%">
            <argument type="service" id="security.acl.provider" />
            <argument type="service" id="security.context" />
            <argument type="service" id="security.acl.object_identity_retrieval_strategy" />
            <argument>%projecta_acl.default_strategy%</argument>
        </service>

        <service id="projecta_acl.objectmanager" class="%projecta_acl.manager.object.class%">
            <argument type="service" id="security.acl.provider" />
            <argument type="service" id="security.context" />
            <argument type="service" id="security.acl.object_identity_retrieval_strategy" />
            <argument>%projecta_acl.default_strategy%</argument>
        </service>

        <!-- caching -->
        <!--<service id="security.acl.collection_cache" class="%security.acl.collection_cache.class%">-->
            <!--<argument type="service" id="security.acl.provider" />-->
            <!--<argument type="service" id="security.acl.object_identity_retrieval_strategy" />-->
            <!--<argument type="service" id="security.acl.security_identity_retrieval_strategy" />-->
        <!--</service>-->
    </services>
</container>
