{
    "name": "project-a/acl-bundle",
    "type": "symfony-bundle",
    "description": "The missing link between Symfony`s Acl implementation and your application.",
    "keywords": ["symfony2", "acl", "security"],
    "homepage": "http://www.project-a.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Tschinder",
            "email": "daniel.tschinder@project-a.com",
            "homepage": "http://www.project-a.com",
            "role": "Senior Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/framework-bundle": ">=2.2,<2.5-dev",
        "symfony/security": ">=2.2,<2.5-dev",
        "symfony/doctrine-bridge": ">=2.2,<2.5-dev",
        "doctrine/common": "~2.2"
    },
    "require-dev": {
        "symfony/finder": ">=2.2,<2.5-dev",
        "symfony/browser-kit": ">=2.2,<2.5-dev",
        "doctrine/orm": "~2.2",
        "doctrine/mongodb-odm": "~1.0",
        "phpunit/phpunit": "~3.7",
        "satooshi/php-coveralls": "*"
    },
    "suggest": {
        "doctrine/orm": "Allows you to remove Acl entries automatically.",
        "doctrine/mongodb-odm": "Allows you to remove Acl entries automatically."
    },
    "autoload": {
        "psr-0": { "ProjectA\\Bundle\\AclBundle": "" }
    },
    "target-dir": "ProjectA/Bundle/AclBundle",
    "extra": {
       "branch-alias": {
           "dev-master": "1.0.x-dev"
        }
    }
}
